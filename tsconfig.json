{
  "compilerOptions": {
    "target": "ES2020", // vercionamento do codigo JS
    "lib": ["es5", "es6", "ES2020"], // permite recurso de todas as libs
    "experimentalDecorators": true, //necessario para utilizar o typorm
    "emitDecoratorMetadata": true,//necessario para utilizar o typorm
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true, // for√ßa deixar tipado
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false, // permiter criar as variaveis sem um metodo construtor
    
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "typeRoots": ["./src/@types"],
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],

  "ts-node": {
    "files": true
  }
}
